{
    "manifest_version": 3,
    "name": "Better Moodle",
    "version": "1.3.5",
    "description": "Better-Moodle is a Chrome extension designed to enhance the ESIEA ENT platform.",
    "icons": {
        "128": "icon128.png"
    },
    "permissions": [],
    "content_scripts": [
        {
            "run_at": "document_idle",
            "matches": ["https://learning.esiea.fr/*"],
            "js": ["Coloris/coloris.js", "content.js"],
            "css": ["Coloris/coloris.css", "content.css"]
        }
    ]
}